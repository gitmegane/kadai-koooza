  <div class="row col-md-9 col-sm-4 col-xs-12">
    <% if course %>

      <div class="item">
        <div class="">
              <h1><%= course.name %></h1>
              <p><%= course.content %></p>

        </div>
      </div>
    
      <% lessons.each do |lesson| %>
        <div class="item">
          <div id="lesson-<%= lesson.major_no %>">
              <h3>レッスン<%= lesson.major_no %></h3>
              <!-- 改行も含めて表示 -->
              <p><%= simple_format(h(lesson.content)) %></p>
          </div>
        </div>
      <% end %>


    <% end %>
  </div>
